@page
@using gpconnect_appointment_checker.Helpers
@model LoginModel

@if (User.Identity.IsAuthenticated)
{
    <div style="color: #ffffff; font-style: italic">
        @User.GetClaimValue("Email")<br />
        @User.GetClaimValue("ODS")&nbsp;(@User.GetClaimValue("OrganisationName"))
    </div>
    <a style="color:#ffffff" asp-action="Signout" asp-controller="Auth">Sign out</a>
}
