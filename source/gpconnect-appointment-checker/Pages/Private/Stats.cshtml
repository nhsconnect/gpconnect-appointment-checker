@using gpconnect_appointment_checker.Helpers.Constants
@{
    var britishZone = TimeZoneInfo.FindSystemTimeZoneById("GMT Standard Time");
    var currentDate = TimeZoneInfo.ConvertTime(DateTime.Now, TimeZoneInfo.Local, britishZone);
}


<div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-full">
        <div class="nhsuk-inset-text">
            <span class="nhsuk-u-visually-hidden">Information: </span>
            <p>@Html.Raw(string.Format(SearchConstants.SEARCHSTATSTEXT, Model.SearchDuration.ToString("#.##s"), currentDate.ToString("d MMM yyyy HH:mm:ss"), Model.SearchResultsCount))</p>
        </div>
    </div>
</div>